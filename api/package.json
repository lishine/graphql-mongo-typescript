{
    "name": "gql-mongo-bayon-api",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build-noenv": "rm -rf dist && yarn generate && yarn tsc",
        "build": "export $(cat .env | xargs) && yarn build-noenv",
        "start": "export $(cat .env | xargs) NODE_ENV=production && node ./dist/server.js",
        "dev": "rm -rf dist && yarn generate && yarn tsc && export $(cat .env | xargs) && NODE_ENV=development concurrently --kill-others --restart-tries 10 --restart-after 1000 -k -c \"bgBlue.bold,bgBlack.bold,bgCyan.bold\" yarn:generate-watch yarn:server yarn:tsc-watch",
        "_dev": "export $(cat .env | xargs) && NODE_ENV=development yarn server",
        "tsc": "ttsc",
        "tsc-watch": "ttsc --watch",
        "server": "nodemon ./dist/server.js",
        "generate": "graphql-codegen --config ./codegen-config.yml",
        "generate-watch": "yarn generate --watch"
    },
    "dependencies": {
        "apollo-server-express": "^2.12.0",
        "chai-arrays": "^2.0.0",
        "chai-json-pattern": "^1.1.0",
        "chai-json-schema": "^1.5.1",
        "dirty-chai": "^2.0.1",
        "express": "^4.17.1",
        "graphql": "^15.0.0",
        "graphql-scalars": "^1.1.2",
        "jwt-simple": "^0.5.6",
        "mongoose": "^5.10.7",
        "ts-node": "^8.9.0",
        "yup": "^0.28.5"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^1.13.3",
        "@graphql-codegen/typescript": "^1.13.3",
        "@graphql-codegen/typescript-resolvers": "^1.13.3",
        "@types/chai": "^4.2.11",
        "@types/chai-arrays": "^1.0.3",
        "@types/chai-json-schema": "^1.4.5",
        "@types/dirty-chai": "^2.0.2",
        "@types/graphql": "^14.5.0",
        "@types/graphql-iso-date": "^3.3.3",
        "@types/mocha": "^7.0.2",
        "@types/mongoose": "^5.7.36",
        "@types/node": "^13.13.2",
        "@types/supertest": "^2.0.8",
        "@types/yup": "^0.28.3",
        "chai": "^4.2.0",
        "concurrently": "^5.2.0",
        "mocha": "^7.1.1",
        "nodemon": "^2.0.3",
        "prettier": "^2.0.5",
        "supertest": "^4.0.2",
        "tsconfig-paths": "^3.9.0",
        "ttypescript": "^1.5.12",
        "typescript": "^4.0.3",
        "typescript-transform-paths": "^1.1.14"
    }
}
